<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.softengine.dudu.mobilsinif.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/l"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input_outline">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="175dp"
            android:id="@+id/ana_sayfa_resim"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/input_outline"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:id="@+id/ana_sayfa_ogrenci_no"
            android:padding="1dp"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center"
            android:textStyle="italic"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:id="@+id/ana_sayfa_adi"
            android:padding="2dp"
            android:layout_margin="2dp"
            android:textStyle="bold|normal"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/l">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sınıf sohbeti"
            android:textColor="#fff"
            android:textSize="15dp"
            android:id="@+id/ana_sayfa_sohbet_ac"
            android:background="@color/colorPrimary"/>

        <Button
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ana_sayfa_sohbet_ac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resim paylaş"
            android:textColor="#fff"
            android:textSize="14dp"
            android:id="@+id/ana_sayfa_paylasma"
            android:background="@color/colorPrimary"/>

        <Button
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ana_sayfa_sohbet_ac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dosya paylaş"
            android:textColor="#fff"
            android:textSize="14dp"
            android:id="@+id/ana_sayfa_dosya_paylas"
            android:background="@color/colorPrimary" />
    </LinearLayout>
</RelativeLayout>

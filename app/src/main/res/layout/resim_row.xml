<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_outline"
        android:orientation="vertical">


            <TextView
                android:id="@+id/row_img_kullanici"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="kullanici"
                android:paddingLeft="15dp"
                android:textSize="16dp"
                />

        <TextView
            android:id="@+id/row_img_ders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="ders"
            android:paddingLeft="15dp"
            android:textSize="16dp"
            />


        <ImageView
            android:id="@+id/row_img_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            />

        <TextView
            android:id="@+id/row_img_baslik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="Başlık Burada"
            android:paddingLeft="15dp"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/row_img_aciklama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="aciklama"
            android:textSize="16dp"
            android:paddingLeft="15dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:text="İndir"
            android:textColor="#fff"
            android:id="@+id/row_img_indir"
            android:layout_marginBottom="3dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
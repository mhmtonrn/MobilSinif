<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_resim_ekle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.softengine.dudu.mobilsinif.paylas.ResimEkle">

    <Button
        android:textColor="#fff"
        android:text="Kaydet"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/img_ekle"
        tools:ignore="HardcodedText" />

    <ImageView
        android:background="@drawable/input_outline"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/img_resim_ekle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/img_baslik_ekle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_outline"
        android:padding="10dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:hint="Başlık Ekleyin"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/img_aciklama_ekle"
        android:textColorHint="@color/colorPrimary"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/input_outline"
        android:padding="10dp"
        android:hint="Açıklama Ekleyin"
        android:layout_below="@+id/img_baslik_ekle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/img_ders_ekle"
        android:textColorHint="@color/colorPrimary"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:background="@drawable/input_outline"
        android:padding="10dp"
        android:hint="Ders Ekle"
        android:layout_below="@+id/img_aciklama_ekle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
